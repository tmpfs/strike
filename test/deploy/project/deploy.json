{
	"name": "project",
	"env": {
		"archive": {
			"name": "${project_name}-${project_version}.tgz",
			"dir": "${target}",
			"path": "${target}/${project_name}-${project_version}.tgz"
		}
	},
	"profiles": {
		"default": {
			"type": "tar",
			"url": "file://$env_archive_path",
			"description": "test override for the default profile",
			"local": {
				"pre": [
					{
						"command": "npm",
						"options": [ "pack" ]
					},
					{
						"command": "mv",
						"options": [ "$env_archive_name", "$env_archive_dir" ]
					},
					{
						"command": "pwd"
					}
				]
			}
		}
	}
}